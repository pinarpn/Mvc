@model Proje.Models.Etkinlik

@{
    ViewBag.Title = "EtkinlikEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EtkinlikEkle</h2>

@using (Html.BeginForm("EtkinlikEkle", "Etkinlik_", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="mesaibit">Salon Listesi</label>
        @Html.DropDownList("salon", null, "Salon Seçin", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="mesaibit">Kategori Listesi</label>
        @Html.DropDownList("kategori", null, "Kategori Seçin", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">ETKİNLİK ADI</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(Model => Model.EtkinlikAdi, new { @class = "form-control", @Placeholder = "Etkinlik Adını Giriniz" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">ETKİNLİK AÇIKLAMA</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(Model => Model.Aciklama, new { @class = "form-control", @Placeholder = "Etkinlik Açıklama Giriniz" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">TALEP EDEN BİRİM</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(Model => Model.TalepBirim, new { @class = "form-control", @Placeholder = "Etkinlik Talep Eden Birimi Giriniz" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">TALEP EDEN KİŞİ</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(Model => Model.TalepKisiTC, new { @class = "form-control", @Placeholder = "Talep Eden Kişinin TC Giriniz" })
        </div>
    </div>
    <div class="form-group">
        <div class="card-footer">
            <button type="submit" name="button" class="btn btn-primary float-right" style="width:200px">Ekle</button>
        </div>
    </div>}
