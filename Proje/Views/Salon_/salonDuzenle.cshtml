@model Proje.Models.Salon_Tablosu

@{
    ViewBag.Title = "salonDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>salonDuzenle</h2>

@using (Html.BeginForm("salonDuzenle", "Salon_", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"></label>
        <div class="col-sm-10" style="display: none;">
            @Html.TextBoxFor(Model => Model.SalonID, new { @class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">SALON ADI</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(Model => Model.SalonAdi, new { @class = "form-control", @Placeholder = "Yeni Salon Adını Giriniz" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">SALON AÇIKLAMA</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(Model => Model.SalonAciklama, new { @class = "form-control", @Placeholder = "Yeni Salon Açıklama Giriniz", @rows = "7" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">SALON KAPASİTE</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(Model => Model.SalonKapasite, new { @class = "form-control", @Placeholder = "Yeni Salon Kapasite Giriniz" })
        </div>
    </div>
    <div class="form-group">
        <div class="card-footer">
            <button type="submit" name="button" class="btn btn-primary float-right" style="width:200px">Ekle</button>

        </div>
    </div>}

