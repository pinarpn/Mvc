@model IEnumerable<Proje.Models.Etkinlik_Kategorileri>

@{
    ViewBag.Title = "tumKategorileriDondur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>tumKategorileriDondur</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                KATEGORİ TABLOSU
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>KATEGORİ ID</th>
                                <th>KATEGORİ ADI</th>
                                <th>KATEGORİ AÇIKLAMA</th>
                                <th>SON GÜNCELLENME</th>
                                <th>DÜZENLE</th>
                                <th>SİL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr class="odd gradeX">
                                    <td class="center">@x.KategoriID</td>
                                    <td>@x.KategoriAdi</td>
                                    <td>@x.KategoriAciklama</td>
                                    <td class="center">@x.KategoriID</td>
                                    <th>
                                        <a href="@Url.Action("KategoriDuzenle","Etkinlik_Kategorileri_", new {KategoriID = x.KategoriID})" class=" btn btn-block bg-gradient-success">
                                            DÜZENLE
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("KategoriSil","Etkinlik_Kategorileri_", new {KategoriID = x.KategoriID})" class=" btn btn-block bg-gradient-success">
                                            SİL
                                        </a>
                                    </th>
                                </tr>

                            }
                    </table>
                </div>

            </div>
        </div>
        End Advanced Tables
    </div>
</div>