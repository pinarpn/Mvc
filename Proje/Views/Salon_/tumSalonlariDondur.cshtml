@model IEnumerable<Proje.Models.Salon_Tablosu>

@{
    ViewBag.Title = "tumSalonlariDondur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>tumSalonlariDondur</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                SALON TABLOSU
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Salon ID</th>
                                <th>SALON ADI</th>
                                <th>SALON AÇIKLAMA</th>
                                <th>SALON KAPASİTE</th>
                                <th>SON GÜNCELLENME</th>     
                                <th>DÜZENLE</th>
                                <th>SİL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                            <tr class="odd gradeX">
                                <td class="center">@x.SalonID</td>
                                <td>@x.SalonAdi</td>
                                <td>@x.SalonAciklama</td>>
                                <td>@x.SalonKapasite</td>
                                <td class="center">@x.SalonID</td>
                                <th>
                                    <a href="@Url.Action("salonDuzenle","Salon_", new {SalonID = x.SalonID})" class=" btn btn-block bg-gradient-success">
                                        DÜZENLE
                                    </a>
                                </th>
                                <th>
                                    <a href="@Url.Action("salonSil","Salon_", new {SalonID = x.SalonID})" class=" btn btn-block bg-gradient-success">
                                        SİL
                                    </a>
                                </th>
                            </tr>
                            } 
                    </table>
                </div>

            </div>
        </div>
        End Advanced Tables
    </div>
</div>